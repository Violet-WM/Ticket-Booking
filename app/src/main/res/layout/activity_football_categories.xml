<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".football_categories">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/footballcategoriesbackarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_back_24"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Categories"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hd"/>

    <!-- Main Image -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/hd"
        android:scaleType="centerCrop"
        android:src="@drawable/fkf"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />


    <!-- Pick a League Text -->
    <TextView
        android:id="@+id/pk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a League"
        android:textColor="#333333"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Shadowed Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pk"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:elevation="2dp"/>

    <!-- League Options -->
    <LinearLayout
        android:id="@+id/leagueoptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/pk"
        android:padding="16dp">

        <!-- FKF Premier League -->
        <RelativeLayout
            android:id="@+id/fkfPremierleague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fkf" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image1"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:text="FKF Premier League"
                android:textSize="16sp"
                android:textColor="#666666" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Shadowed Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/leagueoptions"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:elevation="2dp"/>

</RelativeLayout>
