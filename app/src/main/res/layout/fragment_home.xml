<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <!-- Title TextView -->

    <TextView
        android:id="@+id/txtCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:text="Ticket Booking"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <!-- Welcome Card RelativeLayout -->
    <RelativeLayout
        android:id="@+id/welcomeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCreateAccount"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:paddingBottom="50dp"
        style="@style/CardGradient.">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="95dp"
            android:id="@+id/shine"
            android:src="@drawable/shine"
            android:layout_marginStart="-50dp"/>

        <!-- Welcome Text TextView -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Welcome, JohnðŸ‘‹"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Welcome SubText TextView -->
        <TextView
            android:id="@+id/welcomeSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_marginStart="10dp"
            android:text="We have a lot of events for you"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cardButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/welcomeSubText"
            android:backgroundTint="@color/white"
            android:text="View all"
            android:textSize="12dp"
            android:textColor="#051D5F"
            android:drawableRight="@drawable/ic_right_nav"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeCard"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        android:text="Popular events"
        android:textSize="14dp" />

    <!-- RecyclerView for Popular Events -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/popular"
        android:layout_marginHorizontal="10dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/divider1"
        android:layout_marginTop="15dp"
        app:dividerInsetEnd="16dp"
        app:dividerInsetStart="16dp"
        android:layout_below="@+id/popular_events_recycler_view" />

    <!-- Categories TextView -->
    <TextView
        android:id="@+id/round1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        android:text="Round 1"
        android:textSize="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/round1Recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/round1Txt"
        android:layout_marginStart="10dp"/>

</RelativeLayout>