<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PickEvents">

    <Spinner
        android:id="@+id/spinner_rounds"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Spinner
        android:id="@+id/spinner_events"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/spinner_rounds"
        android:layout_margin="8dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/recycler_view_loaded_events"
        android:layout_alignStart="@+id/recycler_view_loaded_events"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="166dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="187dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_events"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Upload Image" />

    <Button
        android:id="@+id/btn_save_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_upload_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save Events" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_save_events"
        android:fontFamily="@font/poppins_bold"
        android:text="Picked events" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_selected_events"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:layout_below="@id/textView4"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_selected_events"
        android:fontFamily="@font/poppins_bold"
        android:text="Existing events in Database" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_loaded_events"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/textView3"
        android:layout_margin="8dp"
        android:layout_marginTop="-478dp"
        android:orientation="horizontal" />

</RelativeLayout>
